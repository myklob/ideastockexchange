# Idea Stock Exchange Configuration

# Database
DATABASE_URL=sqlite:///./ideastockexchange.db

# NLP & Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.75

# Topic Overlap Scoring
TOPIC_EXTRACTION_METHOD=semantic
MIN_OVERLAP_SCORE=0.0
MAX_TOPICS_PER_STATEMENT=10

# Topic Ranking (TopicRank formula weights)
OVERLAP_WEIGHT=0.50
TRUTH_WEIGHT=0.30
DISAGREEMENT_BOOST=0.10
RECENCY_WEIGHT=0.10

# API Configuration
MAX_RESULTS_PER_PAGE=20
API_PREFIX=/api/v1
