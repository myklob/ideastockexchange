# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/ideastockexchange

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRE=30d

# Stripe Payment Processing
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product IDs (create these in Stripe Dashboard)
# Create Price objects for each subscription tier
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Email Configuration (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis (optional, for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_PAYMENTS=true
ENABLE_MATCHING=true
ENABLE_GAMIFICATION=true
ENABLE_REAL_MONEY_INVESTING=false

# Admin Configuration
ADMIN_EMAIL=admin@ideastockexchange.com
